<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="library.mgiandia.com.androidlibrary.ui.HomePage.HomePage"
    android:background="@color/colorDarkBG"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <Button
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:text="@string/manage_books"
        android:id="@+id/manage_books_button"
        android:textColor="@color/colorWhite"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_message_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:text="@string/manage_borrowers"
        android:id="@+id/manage_borrowers_button"
        android:textColor="@color/colorWhite"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/manage_books_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="29dp"
        app:layout_constraintGuide_percent="0.08125" />

    <TextView
        android:id="@+id/welcome_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:textColor="@color/colorWhite"
        android:textSize="17dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="167dp"
        android:layout_height="124dp"
        android:layout_marginTop="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bookshelf" />

</android.support.constraint.ConstraintLayout>
